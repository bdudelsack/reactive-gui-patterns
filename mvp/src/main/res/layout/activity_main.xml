<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.hs_flensburg.mobilecomputing.mvp.ViewActivity"
    tools:layout_editor_absoluteY="81dp" tools:layout_editor_absoluteX="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00 €"
        android:textSize="64sp" android:id="@+id/textAmount"
        app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:text="Add 10€"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAdd"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textAmount"
        app:layout_constraintRight_toLeftOf="@+id/buttonWithdraw" app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:text="Withdraw 10€"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonWithdraw"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textAmount" app:layout_constraintLeft_toRightOf="@+id/buttonAdd"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
